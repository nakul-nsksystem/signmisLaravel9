{
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "./built/",
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true ,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,    
       "target": "es5",
      //"target": "ES2019",      
      "lib": [
        "es2016",
        "dom"
      ] 
    },
    "vueCompilerOptions": {
      //vue3にしたらtargetのみ消す
      "target": 2.7,
      "experimentalDisableTemplateSupport": true
    } ,
    "include": [
      "resources/ts/**/*"
    ] ,

  }
